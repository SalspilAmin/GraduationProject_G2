@model Grad_Project_G2.BLL.ViewModels.GradeViewModel

@{
    ViewData["Title"] = "Create Grade";
}

<h2>Create Grade</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SessionId" class="control-label">Session</label>
        <select asp-for="SessionId" asp-items="Model.Sessions" class="form-control"></select>
        <span asp-validation-for="SessionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TraineeId" class="control-label">Trainee</label>
        <select asp-for="TraineeId" asp-items="Model.Trainees" class="form-control"></select>
        <span asp-validation-for="TraineeId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>
