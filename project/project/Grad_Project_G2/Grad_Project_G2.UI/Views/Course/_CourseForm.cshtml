@using Grad_Project_G2.BLL.ViewModels.CourseViewModel
@using Grad_Project_G2.DAL.Models
@model CourseViewModel
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Category" class="control-label"></label>
    <select asp-for="Category" class="form-control"
            asp-items="Html.GetEnumSelectList<Category>()">
        <option value="">-- Select Category --</option>
    </select>
    <span asp-validation-for="Category" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="InstructorId" class="control-label">Instructor</label>
    <select asp-for="InstructorId" class="form-control"
            asp-items="ViewBag.Instructors">
        <option value="">-- Select Instructor --</option>
    </select>
    <span asp-validation-for="InstructorId" class="text-danger"></span>
</div>
