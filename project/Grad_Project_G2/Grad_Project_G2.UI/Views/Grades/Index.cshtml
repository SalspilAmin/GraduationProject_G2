@model PagedResult<GradeViewModel>

@{
    ViewData["Title"] = "Grades";
}

<h2>Grades</h2>

<form method="get" asp-action="Index">
    <input type="text" name="search" class="form-control"
           value="@ViewData["Search"]" placeholder="Search by trainee name" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Trainee</th>
            <th>Session</th>
            <th>Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var grade in Model.Items)
    {
        <tr>
            <td>@grade.TraineeName</td>
            <td>@grade.SessionName</td>
            <td>@grade.Value</td>
            <td>
                <a asp-action="Edit" asp-route-id="@grade.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@grade.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@grade.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="mt-3">
    Page @Model.PageIndex of @Model.TotalPages

    @if (Model.HasPreviousPage)
    {
        <a class="btn btn-secondary" asp-action="Index" asp-route-search="@ViewData["Search"]" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
    }

    @if (Model.HasNextPage)
    {
        <a class="btn btn-secondary" asp-action="Index" asp-route-search="@ViewData["Search"]" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
    }
</div>
