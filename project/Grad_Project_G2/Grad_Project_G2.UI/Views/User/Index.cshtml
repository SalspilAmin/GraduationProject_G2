@model PagedResult<UserVM>


@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

@if (TempData["UserSuccess"] != null)
{
    <div id="user-success-alert" class="alert alert-success alert-dismissible fade show fade" role="alert">
        @TempData["UserSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}




<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by name or email" />
        </div>
        <div class="col-md-3">
            <select name="role" class="form-control">
                <option value="">All Roles</option>
                @foreach (var role in Enum.GetValues(typeof(UserRole)))
                {
                    <option value="@role" selected="@(ViewBag.Role?.ToString() == role.ToString())">@role</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">+ Create New</a>

@if (!Model.Items.Any())
{
    <div class="alert alert-warning">No users found.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Items)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber > 1 ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-search="@ViewBag.Search" asp-route-role="@ViewBag.Role">Previous</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search" asp-route-role="@ViewBag.Role">@i</a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber < Model.TotalPages ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-search="@ViewBag.Search" asp-route-role="@ViewBag.Role">Next</a>
                </li>
            </ul>
        </nav>

        <div class="text-center mt-3">
            Page <strong>@Model.PageNumber</strong> of <strong>@Model.TotalPages</strong>
        </div>
    }

}

@section Scripts {
    <script>
        setTimeout(function () {
            var alert = document.getElementById('user-success-alert');
            if (alert) {
                alert.classList.remove('show'); 

                setTimeout(function () {
                    alert.remove();
                }, 500);
            }
        }, 2000);
    </script>
}
