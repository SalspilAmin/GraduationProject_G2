@model DeleteUserVM

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete <strong>@Model.FullName</strong>?</h4>

    @if ((int)Model.Role == (int)UserRole.Trainee)
    {
        <div class="alert alert-warning">
            <strong>Note:</strong> Deleting this trainee will also delete all of their grades.
        </div>
    }

</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
