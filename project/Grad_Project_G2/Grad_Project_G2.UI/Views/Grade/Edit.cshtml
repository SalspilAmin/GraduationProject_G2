@model Grad_Project_G2.BLL.ViewModels.GradeViewModel

<h2>Edit Grade</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SessionName"></label>
        <input asp-for="SessionName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="TraineeName"></label>
        <input asp-for="TraineeName" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
