@model Grad_Project_G2.BLL.ViewModels.GradeViewModel

<h2>Delete Grade</h2>

<h4>Are you sure you want to delete this grade?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Trainee</dt>
        <dd class="col-sm-10">@Model.TraineeName</dd>

        <dt class="col-sm-2">Session</dt>
        <dd class="col-sm-10">@Model.SessionName</dd>

        <dt class="col-sm-2">Value</dt>
        <dd class="col-sm-10">@Model.Value</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
