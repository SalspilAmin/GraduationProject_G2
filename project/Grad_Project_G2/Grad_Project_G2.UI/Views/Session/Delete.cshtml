@model Grad_Project_G2.BLL.ViewModels.SessionViewModel

@{
    ViewData["Title"] = "Delete Session";
}

<h2>Delete Session</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this session?
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Course: @Model.CourseName</h4>
        <p><strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd HH:mm")</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
