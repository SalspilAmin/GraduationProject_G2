@model Grad_Project_G2.BLL.ViewModels.SessionViewModel

@{
    ViewData["Title"] = "Session Details";
}

<h2>Session Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Course: @Model.CourseName</h4>
        <p><strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd HH:mm")</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
